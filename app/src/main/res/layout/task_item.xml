<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/taskitem_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:paddingHorizontal="20dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/shape_setting"
    android:elevation="10dp">
    <TextView
        android:id="@+id/taskitem_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is the title of the task"
        android:fontFamily="@font/gilroy_medium"
        android:textSize="24sp"
        android:textColor="@color/text_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/taskitem_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
        android:fontFamily="@font/gilroy_regular"
        android:textSize="14sp"
        android:textColor="@color/text_normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/taskitem_title"
        />
    <LinearLayout
        android:id="@+id/taskitem_ll_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/taskitem_description"
        app:layout_constraintStart_toStartOf="parent"
        >

        <ProgressBar
            android:id="@+id/taskitem_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingTop="10dp"

            />
    <TextView
        android:id="@+id/taskitem_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0%"
        android:layout_marginStart="5dp"
        android:fontFamily="@font/gilroy_bold"
        android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/taskitem_ll_progressbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/taskitem_attachment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12sp"
            android:background="@drawable/shape_6"
            android:drawableStart="@drawable/icon_attachment"
            android:visibility="gone"
            android:drawablePadding="4dp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@id/taskitem_rv_user"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/taskitem_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="23/12/2023 10:00 PM"
            android:background="@drawable/shape_7"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="12sp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="2dp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>