<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/group_avatar_chg"
        android:layout_width="90dp"
        android:layout_height="91dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/Groupcreate"
        />
    <TextView
        android:id="@+id/team_name"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="@string/team_name"
        app:layout_constraintTop_toBottomOf="@+id/group_avatar_chg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="27dp"
        android:textSize="15sp"
        android:textColor="#000000"

        android:gravity="center_horizontal|top"
        />

    <EditText
        android:id="@+id/ed_teamname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_rectangle_login"
        app:layout_constraintTop_toBottomOf="@+id/team_name"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="#676767"
        android:text="@string/enter_your_"
        android:paddingLeft="20dp"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal|top"
        android:text="@string/description"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_teamname"
        tools:ignore="TextSizeCheck" />
    <EditText
        android:id="@+id/ed_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_rectangle_login"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="#676767"
        android:text="@string/describe_ab"
        android:gravity="left|top"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/role"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="@string/role"
        app:layout_constraintTop_toBottomOf="@+id/ed_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="27dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="left|top"
        />

    <GridView
        android:id="@+id/lv_role"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/ed_addrole"
        app:layout_constraintStart_toStartOf="@+id/role"
        app:layout_constraintTop_toBottomOf="@+id/role"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:numColumns="3"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="25dp"
        />
    <EditText
        android:id="@+id/ed_addrole"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_rectangle_login"
        app:layout_constraintTop_toBottomOf="@+id/role"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="#676767"
        android:gravity="left|top"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/tv_addRole"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/role"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintStart_toEndOf="@+id/lv_role"
        android:layout_marginTop="5dp"
        android:drawableStart="@drawable/ic_add"
        app:layout_constraintLeft_toRightOf="@+id/ed_addrole"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/member"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="@string/member"
        app:layout_constraintTop_toBottomOf="@+id/ed_addrole"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="27dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="left|top"
        />
    <GridView
        android:id="@+id/lv_member"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@+id/member"
        app:layout_constraintTop_toBottomOf="@+id/member"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_addmem"
        android:numColumns="3"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="25dp"
        />
    <EditText
        android:id="@+id/ed_addmem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_rectangle_login"
        app:layout_constraintTop_toBottomOf="@+id/member"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="#676767"
        android:gravity="left|top"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/tv_addMem"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@+id/member"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/lv_member"
        android:drawableStart="@drawable/ic_add"
        app:layout_constraintLeft_toRightOf="@+id/ed_addrole"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ed_addmem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/create"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.9sp"
        android:gravity="center"
        android:background="@drawable/rectangle_3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

