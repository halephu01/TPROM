<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmentCreateGroup"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/group_avatar_chg"
        android:layout_width="90dp"
        android:layout_height="91dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/team_name"
        android:background="@drawable/group_create"
        />
    <TextView
        android:id="@+id/team_name"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="@string/team_name"
        app:layout_constraintTop_toBottomOf="@+id/group_avatar_chg"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="27dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center_horizontal|top"
        />

    <EditText
        android:id="@+id/ed_teamname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_rectangle_login"
        app:layout_constraintTop_toBottomOf="@+id/team_name"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="#676767"
        android:hint="@string/enter_your_"
        android:paddingLeft="20dp"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="11dp"
        android:gravity="center_horizontal|top"
        android:text="@string/description"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_teamname"
        tools:ignore="TextSizeCheck" />
    <EditText
        android:id="@+id/ed_description"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/shape_rectangle_login"
        app:layout_constraintTop_toBottomOf="@+id/description"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:textColor="#676767"
        android:hint="@string/describe_ab"
        android:gravity="left|top"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        />

    <TextView
        android:id="@+id/member"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:text="@string/member"
        app:layout_constraintTop_toBottomOf="@+id/ed_description"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="27dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="left|top"
        />

    <LinearLayout
        android:id="@+id/ll_addmem"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_rectangle_login"
        app:layout_constraintTop_toBottomOf="@+id/member"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#676767"
        android:paddingLeft="10dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_member"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_addmem"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_add"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>



    <TextView
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ll_addmem"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/create"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:lineSpacingExtra="2sp"
        android:translationY="-0.9sp"
        android:gravity="center"
        android:background="@drawable/rectangle_3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>