<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Login">

    <TextView
        android:id="@+id/welcome_back"
        style="@style/Big_Tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="32dp"
        android:paddingTop="63dp"
        android:text="Welcome \nBack!\n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/username"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/login_rectangle"
        android:drawableStart="@drawable/icon_user01"
        android:drawablePadding="10dp"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Username or Email"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_back"
        app:layout_constraintBottom_toTopOf="@id/password"
        app:layout_constraintVertical_weight="1" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_rectangle"
        android:drawableStart="@drawable/icon_lock01"
        android:drawablePadding="10dp"
        android:fontFamily="@font/gilroy_medium"
        android:hint="Password"
        android:padding="10dp"
        android:textColorHint="@color/hint_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username"
        app:layout_constraintBottom_toTopOf="@id/forgot_password"
        />

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Forgot Password?"
        android:textAlignment="viewEnd"
        android:textColor="@color/blue2"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintBottom_toTopOf="@id/signin_layout"
        />

    <RelativeLayout
        android:id="@+id/signin_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/password"
        app:layout_constraintStart_toStartOf="@id/password"
        app:layout_constraintTop_toBottomOf="@id/forgot_password"
        app:layout_constraintBottom_toTopOf="@id/signin_with"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/gilroy_black"
            android:text="Sign In"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/login_circle"
            android:drawableStart="@drawable/icon_arrow_left"
            android:paddingLeft="16dp"
            android:clickable="true"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/signin_with"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Sign in with"
        app:layout_constraintBottom_toTopOf="@id/google_signin"
        app:layout_constraintTop_toBottomOf="@id/signin_layout"
        app:layout_constraintEnd_toEndOf="@id/google_signin"
        app:layout_constraintStart_toStartOf="@id/google_signin"
        />

    <TextView
        android:id="@+id/google_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_google_circle"
        android:drawableLeft="@drawable/icon_google"
        android:paddingLeft="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_layout"
        app:layout_constraintBottom_toTopOf="@+id/bottomtext"
        android:clickable="true"
        />


    <TextView
        android:id="@+id/bottomtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Doesn't have an account? Register here"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/google_signin"
        app:layout_constraintStart_toStartOf="parent"
/>


</androidx.constraintlayout.widget.ConstraintLayout>