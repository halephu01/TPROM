<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".group.GroupFragment"
    android:paddingHorizontal="10dp"
    android:background="@color/white"
    android:id="@+id/fragmentGroup">

    <EditText
        android:id="@+id/group_et_findteam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Find a team"
        android:drawablePadding="20dp"
        android:paddingStart="25dp"
        android:paddingVertical="15dp"
        android:textSize="16sp"
        android:textColorHint="#303030"
        android:fontFamily="@font/gilroy_medium"
        android:background="@drawable/shape_2"
        android:drawableStart="@drawable/ic_findateam"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/group_tv_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape4"
            android:text="4 Request"
            android:textSize="16sp"
            android:paddingHorizontal="10sp"
            android:paddingVertical="5dp"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/white"
            android:elevation="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/group_et_findteam"
            app:layout_constraintStart_toStartOf="parent"
            />
    <TextView
            android:id="@+id/group_btn_create"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_3"
            android:text="Create"
            android:textSize="16sp"
            android:paddingHorizontal="10sp"
            android:paddingVertical="5dp"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:elevation="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            app:layout_constraintTop_toBottomOf="@id/group_et_findteam"
            app:layout_constraintEnd_toStartOf="@id/group_btn_find"
            />
    <TextView
            android:id="@+id/group_btn_find"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_3"
            android:text="Find"
            android:textSize="16sp"
            android:paddingHorizontal="10sp"
            android:paddingVertical="5dp"
            android:fontFamily="@font/gilroy_medium"
            android:textColor="@color/white"
            android:elevation="10dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/group_et_findteam"
            app:layout_constraintEnd_toEndOf="@id/group_et_findteam"
            />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/group_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/group_btn_create"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
