<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword_Change"
    android:background="@color/white">
    <TextView
        android:id="@+id/forgotpw_chg_title"
        style="@style/Big_Tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Enter your new\nPassword"
        app:layout_constraintBottom_toTopOf="@id/forgotpw_chg_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="@id/forgotpw_chg_passwdinput"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forgotpw_chg_passwdinput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/forgotpw_chg_title"
        app:layout_constraintBottom_toTopOf="@id/forgotpw_chg_back"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        >

        <EditText
            android:id="@+id/forgotpw_chg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_rectangle_login"
            android:drawableStart="@drawable/icon_lock01"
            android:drawablePadding="10dp"
            android:fontFamily="@font/gilroy_medium"
            android:hint="Password"
            android:padding="15dp"
            android:drawableEnd="@drawable/icon_eye_closed"
            android:textColorHint="@color/hint_color"
            app:layout_constraintBottom_toTopOf="@id/forgotpw_chg_password_confirm"
            app:layout_constraintEnd_toEndOf="@id/forgotpw_chg_password_confirm"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/forgotpw_chg_passwdinput" />

        <EditText
            android:id="@+id/forgotpw_chg_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/shape_rectangle_login"
            android:drawableStart="@drawable/icon_lock01"
            android:drawablePadding="10dp"
            android:fontFamily="@font/gilroy_medium"
            android:hint="Confirm Password"
            android:drawableEnd="@drawable/icon_eye_closed"
            android:padding="15dp"
            android:textColorHint="@color/hint_color"
            app:layout_constraintBottom_toTopOf="@id/forgotpw_chg_term"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/forgotpw_chg_password" />

        <TextView
            android:id="@+id/forgotpw_chg_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/gilroy_regular"
            android:text="*Please enter a new password. Your password\n should be at least 8 characters long and include a\n combination of letters, numbers."
            android:textColor="#676767"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="@id/forgotpw_chg_password_confirm"
            app:layout_constraintTop_toBottomOf="@id/forgotpw_chg_password_confirm"
            tools:ignore="TextSizeCheck" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/forgotpw_chg_layout_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/forgotpw_chg_passwdinput"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/forgotpw_chg_passwdinput"
        app:layout_constraintTop_toBottomOf="@+id/forgotpw_chg_passwdinput"
        app:layout_constraintBottom_toTopOf="@id/forgotpw_chg_back"
        app:layout_constraintVertical_bias="0.1">


        <TextView
            android:id="@+id/forgotpw_chg_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_circle_login"
            android:clickable="true"
            android:drawableStart="@drawable/icon_arrow_left"
            android:paddingLeft="16dp"
            tools:ignore="SpeakableTextPresentCheck" />
    </RelativeLayout>

    <TextView
        android:id="@+id/forgotpw_chg_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:clickable="true"
        android:fontFamily="@font/gilroy_medium"
        android:text="Back"
        android:textAlignment="center"
        android:textColor="#676767"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        tools:ignore="HardcodedText,TouchTargetSizeCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>