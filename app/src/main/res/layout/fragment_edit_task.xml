<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/fragment_edit_task"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout

        android:id="@+id/choosedate"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clipToOutline="true"
        android:background="@drawable/frame_62583"
        >
        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:text="Choose date"
            android:fontFamily="@font/gilroy_bold"
            android:textAppearance="@style/label"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.1sp"
            android:gravity="top"
            />
        <RelativeLayout
            android:id="@+id/deadline"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:clipToOutline="true"
            android:background="@drawable/deadline"
            >

            <View
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_date" />
        </RelativeLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:text="Start Date"
            />
        <TextView
            android:id="@+id/cal_startdate"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="80dp"
            android:clickable="true"
            android:focusable="true"
            android:inputType="none"
            android:hint="Set Date"
            />
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:clipToOutline="true"
            android:background="@drawable/deadline"
            >

            <View

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_date" />
        </RelativeLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="80dp"
            android:text="Due Date"
            />
        <TextView
            android:id="@+id/cal_duedate"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="80dp"
            android:clickable="true"
            android:focusable="true"
            android:inputType="none"
            android:hint="Set Date"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_upload"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@+id/choosedate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical"
        android:clipToOutline="true"
        android:background="@drawable/frame_62583"
        >
        <TextView
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:text="Upload file"
            android:fontFamily="@font/gilroy_bold"
            android:textAppearance="@style/label"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.1sp"
            android:gravity="top"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/upload"

            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/assigned"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_upload"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clipToOutline="true"
        android:background="@drawable/frame_62583"
        >
        <TextView
            android:id="@+id/tv_assigned"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:text="Assigned Users"
            android:fontFamily="@font/gilroy_bold"
            android:textAppearance="@style/label"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.1sp"
            android:gravity="top"
            />
        <TextView
            android:id="@+id/tv_add_assgined"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tv_assigned"
            android:background="@drawable/rectangle_3"
            android:text="Add"
            android:gravity="center"
            android:layout_alignTop="@+id/recyclerview_assigned"
            android:textColor="@color/white"
            android:layout_marginLeft="15dp"
            android:textSize="18dp"
            android:drawableStart="@drawable/icon_add2"
            android:paddingLeft="10dp"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_assigned"
            android:layout_toRightOf="@+id/tv_add_assgined"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_assigned"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_discription"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@+id/assigned"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clipToOutline="true"
        android:background="@drawable/frame_62583"
        >

        <EditText
            android:id="@+id/ed_taskname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_11"
            android:fitsSystemWindows="true"
            android:fontFamily="@font/gilroy_medium"
            android:hint="Task name"
            android:paddingLeft="10dp"
            android:textColor="#676767"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <EditText
            android:fitsSystemWindows="true"
            android:id="@+id/ed_discription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/shape_11"
            android:layout_marginTop="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#676767"
            android:fontFamily="@font/gilroy_medium"
            android:hint="Discription"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            />
    </RelativeLayout>
    <TextView
        android:fitsSystemWindows="true"
        android:id="@+id/tv_edit_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:text="Edit"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/rectangle_3"
        />

    <TextView
        android:id="@+id/tv_groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Group"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_task"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_description"
        android:visibility="gone"
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toBottomOf="@+id/tv_groupName"
        />

</androidx.constraintlayout.widget.ConstraintLayout>