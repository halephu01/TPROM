<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:elevation="10dp"
    android:background="@drawable/shape_setting">
    <LinearLayout
        android:id="@+id/ll_notification_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/notificationitem_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification Title"
            android:fontFamily="@font/gilroy_medium"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/notificationitem_tv_groupname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/gilroy_semibold"
            android:gravity="center|end"
            android:textSize="14sp"
            android:text="Group name"
            android:textColor="@color/blue2" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ll_notification_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="10dp">
        <TextView
            android:id="@+id/notificationitem_tv_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"
            android:textSize="14sp"
            android:fontFamily="@font/gilroy_regular"/>
        <TextView
            android:id="@+id/notificationitem_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/12/2023 10:23 PM"
            android:fontFamily="@font/gilroy_semibold"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_gravity="bottom|end"
            android:background="@drawable/shape_1"
            android:paddingVertical="3dp"
            android:paddingHorizontal="10dp"
            android:layout_marginBottom="5dp"
            />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>