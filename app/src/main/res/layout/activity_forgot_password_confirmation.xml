<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword_Confirmation"
    android:background="@color/white">

    <TextView
        android:id="@+id/fogorpw_cf_title"
        style="@style/Big_Tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Enter a\nConfirmation code"
        app:layout_constraintBottom_toTopOf="@id/forgotpw_cf_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.16"
        app:layout_constraintStart_toStartOf="@id/fogotpw_cf_codeiput"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.097" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fogotpw_cf_codeiput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fogorpw_cf_title"
        app:layout_constraintBottom_toTopOf="@id/forgotpw_cf_back"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        >

        <EditText
            android:id="@+id/forgotpw_cf_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/shape_rectangle_login"
            android:drawableStart="@drawable/icon_mail_opened"
            android:drawablePadding="10dp"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="18dp"
            android:hint="Enter your confirmation code here"
            android:padding="15dp"
            android:textColorHint="@color/hint_color"
            app:layout_constraintBottom_toTopOf="@id/forgotpw_cf_term"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fogotpw_cf_codeiput" />
        <TextView
            android:id="@+id/forgotpw_cf_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* We will send you a message to set or reset your\n new password"
            android:fontFamily="@font/gilroy_regular"
            android:textSize="14dp"
            android:textColor="#676767"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@id/forgotpw_cf_code"
            app:layout_constraintStart_toStartOf="@id/forgotpw_cf_code"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/forgotpw_cf_layout_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/fogotpw_cf_codeiput"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/fogotpw_cf_codeiput"
        app:layout_constraintTop_toBottomOf="@+id/fogotpw_cf_codeiput"
        app:layout_constraintBottom_toTopOf="@id/forgotpw_cf_back"
        app:layout_constraintVertical_bias="0.1">


        <TextView
            android:id="@+id/forgotpw_cf_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/shape_circle_login"
            android:clickable="true"
            android:drawableStart="@drawable/icon_arrow_left"
            android:paddingLeft="16dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/forgotpw_cf_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:fontFamily="@font/gilroy_medium"
        android:text="Back"
        android:textColor="#676767"
        android:textAlignment="center"
        android:clickable="true"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1" />

</androidx.constraintlayout.widget.ConstraintLayout>