<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/choosedate"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        android:clipToOutline="true"
        android:background="@drawable/frame_62583"
        >
        <TextView
            android:id="@+id/label"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:text="Choose date"
            android:fontFamily="@font/gilroy_bold"
            android:textAppearance="@style/label"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.1sp"
            android:gravity="top"
            />
        <RelativeLayout
            android:id="@+id/deadline"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:clipToOutline="true"
            android:background="@drawable/deadline"
            >

            <View
                android:id="@+id/icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_date" />
        </RelativeLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="80dp"
            android:text="Start Date"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="80dp"
            android:text="23.12.2023  10:00 PM"
            />
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:clipToOutline="true"
            android:background="@drawable/deadline"
            >

            <View

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_date" />
        </RelativeLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="80dp"
            android:text="Due Date"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="80dp"
            android:text="23.12.2023  23:00 PM"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_upload"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@+id/choosedate"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clipToOutline="true"
        android:background="@drawable/frame_62583"
        >
        <TextView
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:text="Upload file"
            android:fontFamily="@font/gilroy_bold"
            android:textAppearance="@style/label"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.1sp"
            android:gravity="top"
            />
        <TextView
            android:id="@+id/create"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:text="Upload"
            android:textSize="15dp"
            android:drawableStart="@drawable/upload"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_3"
            />
        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:numColumns="3"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="120dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/assigned"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintTop_toBottomOf="@+id/layout_upload"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        android:clipToOutline="true"
        android:background="@drawable/frame_62583"
        >
        <TextView
            android:id="@+id/tv_assigned"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:text="Assigned Users"
            android:fontFamily="@font/gilroy_bold"
            android:textAppearance="@style/label"
            android:lineSpacingExtra="2sp"
            android:translationY="-1.1sp"
            android:gravity="top"
            />
        <TextView
            android:id="@+id/add_assigned"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:text="Add"
            android:textSize="15dp"
            android:drawableStart="@drawable/add2"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:background="@drawable/rectangle_3"
            />
        <GridView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="100dp"
            android:numColumns="4"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_discription"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        app:layout_constraintTop_toBottomOf="@+id/assigned"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:clipToOutline="true"
        android:background="@drawable/frame_62583"
        >
        <EditText
            android:id="@+id/ed_taskname"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rectangle2"
            android:layout_marginTop="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="15sp"
            android:textColor="#676767"
            android:text="Task name"
            android:paddingLeft="10dp"
            />
        <EditText
            android:id="@+id/ed_discription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/rectangle2"
            android:layout_marginTop="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#676767"
            android:fontFamily="@font/gilroy_medium"
            android:text="Discription"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/create_new_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        android:text="@string/create"
        android:textSize="18dp"
        android:textColor="@color/white"

        android:gravity="center"
        android:background="@drawable/rectangle_3"
        />

</androidx.constraintlayout.widget.ConstraintLayout>