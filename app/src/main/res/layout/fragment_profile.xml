<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mainfragment.ProfileFragment"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_picture_avatar"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
/>
    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/profile_picture"
        android:text="Name"
        android:textSize="34sp"
        android:textColor="@color/blue2"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gilroy_medium"/>

    <LinearLayout
        android:id="@+id/profile_layout_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/profile_name"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/shape_setting"
        app:layout_constraintBottom_toTopOf="@id/profile_logout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_user_setting"
            android:text="Account"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="19sp"
            android:clickable="true"
            android:drawablePadding="30dp"
            android:paddingLeft="30dp"
            android:paddingVertical="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_bell_setting"
            android:text="Notification"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="19sp"
            android:clickable="true"
            android:drawablePadding="30dp"
            android:paddingLeft="30dp"
            android:paddingVertical="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_question"
            android:text="Help and support"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="19sp"
            android:clickable="true"
            android:drawablePadding="30dp"
            android:paddingLeft="30dp"
            android:paddingVertical="18dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/android_speaker"
            android:text="Feedback"
            android:fontFamily="@font/gilroy_medium"
            android:textSize="19sp"
            android:clickable="true"
            android:drawablePadding="30dp"
            android:paddingLeft="30dp"
            android:paddingVertical="18dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/profile_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/shape_setting"
        android:clickable="true"
        android:drawableLeft="@drawable/icon_logout"
        android:drawablePadding="30dp"
        android:fontFamily="@font/gilroy_medium"
        android:paddingVertical="18dp"
        android:paddingLeft="30dp"
        android:text="Log out"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_layout_setting"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>